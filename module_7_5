import os.path
import time

for root, dirs, files in os.walk('.'):
  for file in files:
    filepath = os.path.join('module_5_2.py')
    filetime = os.path.getmtime('./module_5_2.py')
    formatted_time = time.strftime("%d.%m.%Y %H:%M", time.localtime())
    filesize = os.path.getsize(b'module_5_2.py')
    parent_dir = os.path.dirname('module_5_2.py')
    print(f'Обнаружен файл: {file}, Путь: {filepath}, Размер: {filesize} байт, Время изменения: {formatted_time}, Родительская директория: {parent_dir}')
  
